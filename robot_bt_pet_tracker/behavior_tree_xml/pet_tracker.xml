<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <KeepRunningUntilFailure>
            <Sequence>
                <Fallback>
                    <Inverter>
                        <Action ID="GetWaypoint" waypoint="{wp}" wp_id="next"/>
                    </Inverter>
                    <Inverter>
                        <Action ID="Move" goal="{wp}"/>
                    </Inverter>
                    <Parallel failure_threshold="1" success_threshold="1">
                        <Action ID="Patrol"/>
                        <Action ID="FindPet"/>
                    </Parallel>
                </Fallback>
                <Action ID="Follow"/>
            </Sequence>
        </KeepRunningUntilFailure>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="FindPet"/>
        <Action ID="Follow"/>
        <Action ID="GetWaypoint">
            <output_port name="waypoint"/>
            <input_port name="wp_id"/>
        </Action>
        <Action ID="Move">
            <input_port name="goal"/>
        </Action>
        <Action ID="Patrol"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
